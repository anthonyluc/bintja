<% @recipes.each do |recipe| %>
  <div class='recipe_card'>
    <a href="<%= recipe_path(recipe.url_video.gsub('https://www.youtube.com/watch?v=',''), title: recipe.name) %>">
    <div class="my_card">
      <img src="<%= recipe.url_image %>" />
      <div class="card-infos">
        <h2><%= recipe.name.downcase.capitalize %></h2>
      </div>
    </div>
    </a>
  </div>
<% end %>
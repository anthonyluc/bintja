<% unless mobile? %>
<div class='container'>
<% end %>
  <% content_for :title, "Follow" %>
  <div id="follower" <%= "class=follower_mobile" if mobile? %>>
    <div class='col-left'>
        <h2>I follow</h2>
        <%= render 'users/users_cards' %>
        <div class="pages">
            <%= paginate @users, :param_name => 'p_users' %>
        </div>
    </div>
    <div class='col-right'>
        <h2>My followers</h2>
        <%= render 'followers/followers_cards' %>
        <div class="pages">
            <%= paginate @followers, :param_name => 'p_followers' %>
        </div>
    </div>
  </div>
<% unless mobile? %>
</div>
<% end %>
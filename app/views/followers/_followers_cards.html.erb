<div class='followers_cards'>
  <% @followers.each do |f| %>
    <div class='user'>
      <%= link_to user_path(f) do %>
        <% if f.avatar.attached? %>
          <%= image_tag f.avatar, class: "avatar" %>
        <% else %>
          <%= image_tag "avatar_default.svg", class: "avatar" %>
        <% end %>
        <br>
        <%= f.nickname %>
      <% end %>
    </div>
  <% end %>
</div>
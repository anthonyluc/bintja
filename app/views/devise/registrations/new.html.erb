<div class="signup-form">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <h2>Create Account</h2>
		<p class="lead">It's free and hardly takes more than 30 seconds.</p>
    <%= f.error_notification %>

    <div class="form-inputs">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-user-ninja"></i></span>
        <%= f.input :nickname,
                  label: false,
                  placeholder: "Nickname",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "nickname" }%>
      </div>
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-paper-plane"></i></span>
        <%= f.input :email,
                  label: false,
                  placeholder: "Email",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      </div>
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        <%= f.input :password,
                  label: false,
                  placeholder: "Password",
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      </div>
      <div class="input-group">
        <span class="input-group-addon">
					<i class="fa fa-lock"></i>
					<i class="fa fa-check"></i>
				</span>
        <%= f.input :password_confirmation,
                  label: false,
                  placeholder: "Confirm password",
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign Up", class: "btn btn-primary btn-block btn-lg" %>
    </div>
    <br>
    <p class="small text-center">By clicking the Sign Up button, you agree to our <br><%= link_to 'Terms & Conditions', cgu_path %> , and <%= link_to 'Privacy Policy', privacy_policy_path %>.</p>
  <% end %>
  <div class="text-center small">Already have an account? <a href="<%= new_user_session_path %>">Login here</a>.</div>
  <div class="text-center small">Resend confirmation instruction? <a href="<%= new_user_confirmation_path %>">Click here</a>.</div>
</div>

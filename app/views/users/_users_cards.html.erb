<div class='users_cards'>
  <% @users.each do |u| %>
    <div class='user'>
      <%= link_to user_path(u) do %>
        <% if u.avatar.attached? %>
          <%= image_tag u.avatar, class: "avatar" %>
        <% else %>
          <%= image_tag "avatar_default.svg", class: "avatar" %>
        <% end %>
        <br>
        <%= u.nickname %>
      <% end %>
    </div>
  <% end %>
</div>